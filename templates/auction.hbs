<ol class="breadcrumb">
  <li><a href="#">Home</a></li>
  <li class="active">{{name}}</li>
</ol>


<div class="page-header auction-header">
  <h1>
    ~ {{name}} ~
  </h1>
  <h2>
    {{auctionDate}}
  </h2>
</div>

<h4>Auction Lots: </h4>
<ul class="no-padding">
    {{#each lot in lots}}
      <li class="auction_list row">
        <div class="col-xs-3">
          <img class="auction-image" src="css/imgs/fancy_toilet_2.jpg" alt="placeholder toilet" />
        </div>
        <div class="col-xs-9">
          {{#link-to 'lot' lot}}
            <h3>{{lot.name}}</h3>
          {{/link-to}}
        </div>
      </li>
    {{/each}}
</ul>

{{outlet}}

{{#link-to 'newLot' this.id}}
<a class="btn">Add lot to this auction</a>
{{/link-to}}
