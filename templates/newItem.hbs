<form class="well">
  <div class="form-group">
    <label> Item Name
      {{input type="text" value=name class="form-control"}}
    </label>
    <label> Seller
      {{input type="text" value=seller class="form-control"}}
    </label>
    <label> Value
      {{input type="number" value=value class="form-control" placeholder="$"}}
    </label>
    <label> Image URL
      {{input type="text" value=image class="form-control"}}
    </label>
  </div>
  <button {{action 'save'}} class="btn btn-info">Add Item</button>
  <button {{action 'cancel'}} class="btn btn-danger">Cancel</button>
</form>
